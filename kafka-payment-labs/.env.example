# Confluent Cloud Configuration
# Copy this file to .env and fill in your actual values

# Kafka Cluster Configuration
BOOTSTRAP_SERVERS=your-cluster.us-east-1.aws.confluent.cloud:9092
SECURITY_PROTOCOL=SASL_SSL
SASL_MECHANISM=PLAIN
SASL_USERNAME=your-api-key
SASL_PASSWORD=your-api-secret

# Schema Registry Configuration
SCHEMA_REGISTRY_URL=https://your-sr.us-east-1.aws.confluent.cloud
SCHEMA_REGISTRY_API_KEY=your-sr-api-key
SCHEMA_REGISTRY_API_SECRET=your-sr-api-secret

# Confluent Cloud API (for Terraform)
CONFLUENT_CLOUD_API_KEY=your-cloud-api-key
CONFLUENT_CLOUD_API_SECRET=your-cloud-api-secret

# Environment Configuration
ENVIRONMENT_ID=env-xxxxx
CLUSTER_ID=lkc-xxxxx

# Application Configuration
CONSUMER_GROUP_ID=payment-processor
AUTO_OFFSET_RESET=earliest
ENABLE_AUTO_COMMIT=true

# REST Proxy Configuration (if using managed REST Proxy)
REST_PROXY_URL=https://your-rest-proxy.us-east-1.aws.confluent.cloud

# Database Configuration (for Day 3)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Monitoring
METRICS_PORT=8080
LOG_LEVEL=INFO